{
    "compilerOptions": {
      "allowImportingTsExtensions": true,
      "jsx": "react",
      "esModuleInterop": true,
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "strict": true,
      "baseUrl": "./src",
      "lib": [
        "ESNext",
        "DOM"
      ]
    },
    "include": [
      "src/**/*",
      "src/globals.d.ts"
    ],
    "resolve": {
      "extensions": [".ts", ".tsx", ".js", ".jsx", ".json"]
    }
  }
  